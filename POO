#Definindo a classe animal 
class Animal:
    def __init__(self, tamanho, cor, genero, som):
        self.tamanho = print(tamanho)
        self.cor = print(cor)
        self.genero = print(genero)
        self.som = som
#Fazendo o som do cachorro ser igual a Au Au 
class Cachorro(Animal):
    def __init__(self):
       self.som = print("Au,Au")
       
#Fazendo o som do gato ser igual a cocorico
class Gato(Animal):
    def __init__(self):
       self.som = print("cocorico")
       
#Colocando as caracteristicas gerais de todos os animais 
Animal("180", "preto", "homem","miau")

#Salvando as funções em variaveis 
g = Gato()
c = Cachorro()

#Exibindo as funções no console
print(c)
print(g)
